#version 430
precision highp float;

uniform sampler2D texture_sampler;

in vec2 fragment_texcoord;
in vec4 fragment_light_color;

out vec4 fragColor;

void main()
{
    vec4 texture_color = texture(texture_sampler, fragment_texcoord);

    if (texture_color.a == 0.0)
    {
        discard;
    }

    fragColor = texture_color * fragment_light_color;//fragColor = vec4(texture_color.rgb * fragment_light_color, texture_color.a);
}
